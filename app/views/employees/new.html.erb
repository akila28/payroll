<h1>Employee detail</h1>
<%= form_for @employee do |f| %>

<div class='span6'>
<h4><%= f.label :Name, class:'required' %></h4>
<h4><%= f.text_field :emp_name, :placeholder => "employee name" %></h4>
</div>

<h4><%= f.label :Category, class:'required' %>
<%= f.select :emp_category, options_for_select([["Contractual", "contractual"], ["Permanant",  "permanant"], ["Trainee","trainee"]]), { :include_blank => true } %>
 </h4>

<div class='span6'>
<h4><%= f.label :Age %></h4>
<h4><%= f.text_field :Age, :placeholder => "employee age" %></h4>
</div><br />

<h4><%= f.label :Branch, class:'required' %></h4>
<h4><%= f.text_field :emp_branch, :placeholder => "employee branch" %></h4>

<div class='span6'>
<h4><%= f.label :Address %></h4>
<h4><%= f.text_area :address, :placeholder => "fill the address", :rows => 3, :cols => 3 %></h4>
</div><br />

<h4><%= f.label :Designation, class:'required' %></h4>
<%= f.select :emp_designation, options_for_select([["AAO", "aao"], ["AO", "ao"], ["APPRAISER", "appariser"], ["ASSISTANT MANAGER", "assistant manager"], ["CLERK", "clerk"], ["CHEIF MANAGER", "cheif manager"], ["J-CLERK", "jclerk"], ["MANAGER", "manager"], ["SUB-STAFF", "sub-staff"]]), { :include_blank => true } %>

<script>
  $(function() {
    $( "#datepicker1" ).datepicker({format: 'yyyy-mm-dd'});
    $( "#datepicker2" ).datepicker({format: 'yyyy-mm-dd'});
    $( "#datepicker3" ).datepicker({format: 'yyyy-mm-dd'});
  });
  </script>
<div class='span6'>
<h4><%= f.label :DOB, class:'required' %></h4>
<h4><%= f.text_field :dob, :id => "datepicker1", :placeholder => "date of birth" %></h4>
</div><br />


<h4><%= f.label :Start_date, class:'required' %></h4>
<h4><%= f.text_field :start_date, :id => "datepicker2", :placeholder => "start date" %></h4>

<div class='span6'>
<h4><%= f.label :Gender %></h4>
 <%= f.select :gender, options_for_select([["Female", "female"], ["Male", "male"]]), { :include_blank => true } %>
</div><br />

<h4><%= f.label :End_date %></h4>
<h4><%= f.text_field :end_date, :id => "datepicker3", :placeholder => "end date" %></h4>

<div class='span6'>
<h4><%= f.label :Mobile, class:'required' %></h4>
<h4><%= f.text_field :mobile, :placeholder => "mobile" %></h4>
</div><br />

<fieldset class="form-actions"> <%= f.submit "Create", class: "btn btn-primary" %></field>
<% end %>
